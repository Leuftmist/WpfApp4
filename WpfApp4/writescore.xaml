<Window x:Class="WpfApp4.writescore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="writescore" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/pxfuel.jpg"/>
        </Grid.Background>
        <Label x:Name="Lbl_Score" Content="Enter your name" HorizontalAlignment="Center" Margin="0,157,0,0" VerticalAlignment="Top" Height="97" Width="274" Foreground="White"
               FontSize="32" FontWeight="Bold"/>
        <TextBox x:Name="TB_scorewrite" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="Pog" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Btn_Submit" Content="Submit" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" Click="Btn_Submit_Click"/>

    </Grid>
</Window>
