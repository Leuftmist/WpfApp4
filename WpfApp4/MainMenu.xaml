<Window x:Class="WpfApp4.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <TextBlock x:Name="TB_Intro" HorizontalAlignment="Center" Margin="0,78,0,0" TextWrapping="Wrap" Text="Gayme Time" VerticalAlignment="Top" Height="37" Width="172"/>
        <Button x:Name="Btn_Play" Content="Play" HorizontalAlignment="Left" Margin="192,256,0,0" VerticalAlignment="Top" Click="Btn_Play_Click"/>
        <Button x:Name="Btn_Instruct" Content="How to play" HorizontalAlignment="Left" Margin="335,256,0,0" VerticalAlignment="Top" Click="Btn_Instruct_Click"/>
        <Button x:Name="Btn_Leader" Content="Leaderboard" HorizontalAlignment="Left" Margin="565,256,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
